<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Top Action Bar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/light_blue_200"
        android:elevation="4dp">

        <!-- Logo Icon -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_logo" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <!-- Menu Icon -->
        <ImageView
            android:id="@+id/menu_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/menu_icon"
            android:src="@drawable/ic_menu" />
    </androidx.appcompat.widget.Toolbar>
    <!-- Buttons for Other Cities -->
    <HorizontalScrollView
        android:id="@+id/cities_buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="16dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Sample City Button -->
            <Button
                android:id="@+id/button_new_york"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New york"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:onClick="onCityButtonClick" />
            <Button
                android:id="@+id/button_london"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="London"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:onClick="onCityButtonClick" />
            <Button
                android:id="@+id/button_glasgow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Glasgow"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:onClick="onCityButtonClick" />
            <Button
                android:id="@+id/button_oman"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oman"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:onClick="onCityButtonClick" />
            <Button
                android:id="@+id/button_mauritius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mauritius"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:onClick="onCityButtonClick" />
            <Button
                android:id="@+id/button_bangladesh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bangladesh"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:onClick="onCityButtonClick" />


        </LinearLayout>
    </HorizontalScrollView>

    <!-- Weather Information -->
    <LinearLayout
        android:id="@+id/weather_info_container"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/cities_buttons"
        android:background="@drawable/gradient_background"
        android:padding="16dp">

        <!-- Weather Icon -->

        <!-- Temperature and Location -->

        <ImageView
            android:id="@+id/weather_icon"
            android:layout_width="130dp"
            android:layout_height="121dp"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/weather_icon"
            android:src="@drawable/default_icon1" />

        <TextView
            android:id="@+id/temperature_text"
            android:layout_width="53dp"
            android:layout_height="38dp"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="50dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/city_text"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="230dp"
            android:layout_marginTop="50dp"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="15sp" />
        <!-- Main Weather Info -->
        <TextView
            android:id="@+id/main_weather_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="16sp"
            android:textColor="@android:color/black"/>

        <!-- Date, Min Temp, Max Temp -->
        <TextView
            android:id="@+id/date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weather_icon"
            android:layout_marginTop="16dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/min_temp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weather_icon"
            android:layout_marginStart="100dp"
            android:layout_marginTop="16dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/max_temp_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weather_icon"
            android:layout_marginStart="200dp"
            android:layout_marginTop="16dp"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="10sp" />

    </LinearLayout>
    <!-- Weather Details Title -->
    <TextView
        android:id="@+id/weather_details_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather_info_container"
        android:layout_marginTop="16dp"
        android:text="Weather Details"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />


    <LinearLayout
        android:id="@+id/weather_details_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather_details_title"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Humidity & Pressure -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Humidity -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/humidity"
                    android:src="@drawable/ic_humidity" />

                <TextView
                    android:id="@+id/humidityTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Pressure -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/pressure"
                    android:src="@drawable/ic_pressure" />

                <TextView
                    android:id="@+id/pressureTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>

        <!-- Wind Direction & Wind Speed -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Wind Direction -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/wind_direction"
                    android:src="@drawable/ic_wind_direction" />

                <TextView
                    android:id="@+id/windDirectionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Wind Speed -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/wind_speed"
                    android:src="@drawable/ic_wind_speed" />

                <TextView
                    android:id="@+id/windSpeedTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>

        <!-- Visibility & UV Risk -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Visibility -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/visibility"
                    android:src="@drawable/ic_visibility" />

                <TextView
                    android:id="@+id/visibilityTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- UV Risk -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/uv_risk"
                    android:src="@drawable/ic_uv_risk" />

                <TextView
                    android:id="@+id/uvRiskTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>

        <!-- Pollution & Sunrise -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Pollution -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/pollution"
                    android:src="@drawable/ic_pollution" />

                <TextView
                    android:id="@+id/pollutionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Sunrise -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/sunrise"
                    android:src="@drawable/ic_sunrise" />

                <TextView
                    android:id="@+id/sunriseTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>

        <!-- Sunset & Other Details -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Sunset -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/sunset"
                    android:src="@drawable/ic_sunset" />

                <TextView
                    android:id="@+id/sunsetTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textColor="@android:color/white" />
            </LinearLayout>

            <!-- Other Details (Add More LinearLayouts for Other Details if Needed) -->
        </LinearLayout>
    </LinearLayout>

    <!-- Placeholder for Next Three Days Forecast -->
    <TextView
        android:id="@+id/forecastTrigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/weather_details_layout"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="70dp"
        android:text="View Three days Forecast"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:clickable="true"
        android:onClick="showthreedayforecast"
        android:focusable="true" />

    <!-- This is the container for your fragments -->
