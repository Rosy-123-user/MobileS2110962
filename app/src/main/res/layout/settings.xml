<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            android:id="@+id/settings_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"/>

        <!-- Example settings options -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/settings_title"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/option1_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Option 1"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/option1_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Option 1 Value"/>

            <TextView
                android:id="@+id/option2_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Option 2"
                android:textSize="18sp"/>

            <EditText
                android:id="@+id/option2_value"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Option 2 Value"/>

            <!-- Add more settings options as needed -->
        </LinearLayout>

        <!-- Save button -->
        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save Settings"
            android:layout_below="@id/settings_options"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            tools:ignore="UnknownId" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>